<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paper_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaperFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/paper_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_label_my_collection" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_label_my_authorship" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/paper_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/paper_tab_layout" />
</RelativeLayout>