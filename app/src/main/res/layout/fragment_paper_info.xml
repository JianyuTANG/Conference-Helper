<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.paper_info.PaperInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/paper_info_authors_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paper_info_author" />

    <TextView
        android:id="@+id/paper_info_authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paper_info_authors_title"
        android:text="@string/paper_info_author" />

    <TextView
        android:id="@+id/paper_info_abstract_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paper_info_authors"
        android:text="@string/paper_info_abstract" />

    <TextView
        android:id="@+id/paper_info_abstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paper_info_authors"
        android:text="@string/paper_info_abstract" />

</RelativeLayout>