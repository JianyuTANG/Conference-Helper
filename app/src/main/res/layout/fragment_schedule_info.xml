<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.schedule_info.ScheduleInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/schedule_layout_lecturer"
        android:background="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_info_lecturer_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/schedule_info_lecturer" />

        <TextView
            android:id="@+id/schedule_info_lecturer"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_layout_host"
        android:background="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/schedule_layout_lecturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_info_host_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/schedule_info_host" />

        <TextView
            android:id="@+id/schedule_info_host"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_layout_org"
        android:background="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/schedule_layout_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_info_org_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/schedule_info_org" />

        <TextView
            android:id="@+id/schedule_info_org"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_layout_time"
        android:background="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/schedule_layout_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_info_time_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/schedule_info_time" />

        <TextView
            android:id="@+id/schedule_info_time"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_layout_place"
        android:background="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/schedule_layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/schedule_info_place_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/schedule_info_place" />

        <TextView
            android:id="@+id/schedule_info_place"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

</RelativeLayout>