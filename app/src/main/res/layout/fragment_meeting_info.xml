<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    tools:context=".meeting.info.MeetingInfo">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/meeting_layout_name"
        android:background="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meeting_info_name_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/meeting_info_name" />

        <TextView
            android:id="@+id/meeting_info_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/meeting_layout_org"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/meeting_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meeting_info_org_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/meeting_info_org" />

        <TextView
            android:id="@+id/meeting_info_org"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/meeting_layout_date"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/meeting_layout_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meeting_info_date_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/meeting_info_date" />

        <TextView
            android:id="@+id/meeting_info_date"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/meeting_layout_desc"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/meeting_layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meeting_info_desc_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/meeting_info_desc" />

        <TextView
            android:id="@+id/meeting_info_desc"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_info_author" />

    </LinearLayout>

</RelativeLayout>